    <!-- Script pour afficher/masquer les albums -->
    <script>
        function showAlbum(albumName) {
            // Masquer tous les albums
            var albums = document.querySelectorAll('.album');
            albums.forEach(function(album) {
                album.style.display = 'none';
            });

            // Afficher l'album correspondant
            var selectedAlbum = document.querySelector('.' + albumName);
            if (selectedAlbum) {
                selectedAlbum.style.display = 'block';
            }
        }
    </script>

    <!-- Script pour l'initialisation de AOS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
